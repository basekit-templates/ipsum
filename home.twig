{% extends "layout.twig" %}

{% block content %}

{% if pages|length > 1 %}
{{widget('extendednavigation', 'navigationheader', {})|raw}}
{% endif %}
<header class="bk-header">
    <div class="wrapper clearfix">
        <div class="header-left">
                {{widget('content', 'headercontentleft', {"content":"<p>Lorem ip, dolor sit amet consectet</p>"})|raw}}
            <div class="header-img">
                <img class="image" src="{{asset('/images/img-left.png')}}" width="100%">
            </div>
        </div> 

        <div class="companyheader clearfix">
                {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
                {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
        </div>
        <div class="header-right">
            {{widget('content', 'headercontentright', {"content":"<p>Lorem ip, dolor sit amet consectet</p>"})|raw}}
            <div class="header-img">
                <img class="image" src="{{asset('/images/img-right.png')}}" width="100%">
            </div>
        </div>
    </div><!--end wrapper clearfix-->
</header>

<div class="main wrapper clearfix">
{{widget('menusections', 'menusections1', {})|raw}}
{{widget('menu', 'menu1', {})|raw}}
</div>

<footer class="bk-footer">
    <div class="wrapper clearfix">
        {{widget('socialicons', 'footercolumn1socialicons', { 'profileType':'socialicons', 'socialicons':'profile'})|raw}}
    </div>
</footer>

{% endblock %}
